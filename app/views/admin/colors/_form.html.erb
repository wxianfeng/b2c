<![endif]-->

<%= semantic_form_for([:admin,@color], :validate => true) do |form| %>
  <%= form.inputs do %>
    <%= form.input :name  , :required=>true %>
    <li id="color_value_input" class="string required">
      <label for="color_name">Value<abbr title="required">*</abbr></label>
      <%= text_field_tag "color[value]" , @color.try(:value) , :required=>true %>
      <span class="crayon" style="background-color:#999;">&nbsp;</span>
      <p class="inline-errors"></p>
    </li>
    <input type="text" id="myhexcode" value="" style="width:75px;">
    <a href="javascript:void(0);" rel="colorpicker&objcode=myhexcode&objshow=myshowcolor&showrgb=1" style="text-decoration:none;display:inline-block;" >
      <div id="myshowcolor" style="width:15px;height:15px;border:1px solid black">&nbsp;</div></a>


    <%#= form.input :public %>
    <%#= form.input :created_at , :as=>:color_picker %>
  <% end %>

  <%= form.buttons %> or <%= link_to 'cancel', [:admin,@color] %>
<% end %>


<script type="text/javascript">
  //init colorpicker:
  $(document).ready(function(){
    $.ColorPicker.init();
  }
);
</script>

