<%= form_for([:admin,@color]) do |f| %>
  <li>name*:<%= f.text_field :name , :required=>true %></li>  
  <li>value*:<input type="text" id="myhexcode" value="" style="width:75px;" name="color[value]" required/>
    <a href="javascript:void(0);" rel="colorpicker&objcode=myhexcode&objshow=myshowcolor&showrgb=1" style="text-decoration:none;display:inline-block;" >
      <div id="myshowcolor" style="width:15px;height:15px;border:1px solid black">&nbsp;</div></a>
  </li>
  <%= f.submit  %> or <%= link_to 'cancel', [:admin,@color] %>
<% end %>

<script type="text/javascript">
  //init colorpicker:
  $(document).ready(function(){
    $.ColorPicker.init();
  }
);
</script>

