<%= semantic_form_for([:admin,resource], :validate => true) do |form| %>
  <%= form.inputs do %>
    <%= form.input :name %>
    <%= form.input :category_id %>
    <%= form.input :public %>
    <%= form.input :show_order %>
  <% end %>

  <%= form.buttons %> or <%= link_to 'cancel', [:admin,resource] %>
<% end %>
