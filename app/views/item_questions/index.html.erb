<%= title "#{t(:listing_item_questions)}"   %>


<%= link_to t(:new), new_item_question_path %>

<table>
  <thead>
    <th><%= t(:title) %></th>
    <th><%= t(:seller) %></th>
    <th><%= t(:buyer) %></th>
    <th><%= t(:question_type) %></th>
    <th><%= t(:status) %></th>
    <th colspan="3">Actions</th>
  </thead>

  <% @item_questions.each do |item_question| %>
    <tr>
      <td><%= item_question.item.title %></td>
      <td><%= item_question.seller %></td>
      <td><%= item_question.buyer %></td>
      <td><%= item_question.question_type %></td>
      <td><%= item_question.status %></td>
      <td><%= link_to 'Show', item_question_path(item_question) %></td>      
      <td><%= link_to 'Edit', edit_item_question_path(item_question) %></td>
      <td><%= link_to 'Destroy', item_question_path(item_question), :confirm => t(:delete_confirm), :method => :delete %></td>
    </tr>
  <% end %>
</table>


