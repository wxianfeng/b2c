<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
  <title><%= configatron.app_name %> - <%= yield(:title) || 'Home' %></title>
  <%= stylesheet_link_tag  "dev"  %>
  <%= stylesheet_link_tag 'formtastic.css','jquery.crayonbox' %>
  <%= stylesheet_link_tag 'formtastic_changes.css' %>  
  <%= javascript_include_tag 'jquery','rails','rails.validations' , "swfobject.js", "jquery.uploadify.v2.1.0.js" , 'jquery.crayonbox' %>  
  <%= stylesheet_link_tag 'jquery.fancybox-1.3.4' %>
  <%= javascript_include_tag "jquery.fancybox-1.3.4" %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="author" content="Shopdls.com" />  
</head>
<body>
  <!-- HEADER -->
  <div id="header">  
    <%= yield :header %>
    <div>
      <h1><a href="/admin">Kids-Luv Admin</a></h1>
      <% if current_user %>
      <div class="util">
        <ul>
          <li class="first">Hello, <%= current_user.full_name %>!</li>
          <li><%= link_to 'My Profile', admin_user_url(current_user) %></li>
          <li><%= link_to 'Logout', destroy_user_session_url %></li>
        </ul>
        <br/><br/>
        <ul>
          <li class="first"><%= link_to "Public View", root_url %></li>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
  <!-- HEADER end -->

  <!-- MAIN -->
  <div id="main">
    <div class="sidebar">
      <%= display_admin_sidebar %>
    </div>

    <!-- content -->
    <div class="content">
      <h2><%= yield :title %></h2>
      <% unless flash[:notice].blank? %>
        <div class="confirm"><p><%= h flash[:notice] %></p></div>
      <% end %>
      <% unless flash[:error].blank? %>
        <div class="warn"><%= h flash[:error] %></div>
      <% end %>
      <%= yield %>
    </div>

  </div>
  <!-- MAIN end -->

</body>
</html>