<% title "Login" %>

<h2>Not a member? <%= link_to 'Sign up here!', new_registration_path(resource_name) %></h2>

<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => :session_new}) do |form| %>
  <%= form.inputs do %>
    <%= form.input :email, :required => true %>
    <%= form.input :password, :required => true %>

    <li>
      <% if devise_mapping.recoverable? %>
        <%= link_to 'Forgot your password?', new_password_path(resource_name) %>
        <br/>
      <% end %>

      <% if devise_mapping.confirmable? %>
        <%= link_to "Resend account confirmation instructions", new_confirmation_path(resource_name) %>
        <br/>
      <% end %>
    </li>

    <% if devise_mapping.rememberable? %>
      <%= form.input :remember_me, :as => :boolean, :label => 'Remember Me' %>
    <% end %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button 'Sign in' %>
  <% end %>
<% end %>
