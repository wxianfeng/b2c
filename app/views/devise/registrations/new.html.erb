<% title "Sign Up" %>

Already member? <%= link_to 'Sign in here!', new_session_path(resource_name) %>
<br /><br />

<%= semantic_form_for(resource, :validate => true, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %> 
  <%= f.buttons do %>
    <%= f.commit_button 'Sign up' %>
  <% end %>
<% end %>
